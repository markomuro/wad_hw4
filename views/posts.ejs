<html lang="en">

<%- include('partials/head.ejs') %>

<body>
    <%- include('partials/header.ejs') %>


    <section class="posts">

        <% if (fetched.length > 0) { %>
        <% fetched.forEach(fetch => { %>
        <div class="post">
            <a class="singlepost" href="/singlepost/<%= fetch.id %>">
                <div class="facelogo">
                    <p><%= fetch.author %></p>
                    <p><%= fetch.create_time.toISOString().split('T')[0]; %></p>
                </div>

                <div class="content_picture">
                    <img src=<%- fetch.image1 %> />
                </div>

                <div>
                    <p><%= fetch.body %></p>
                </div>
                
            </a>
            <div class="like">
                <img src=<%- fetch.image2 %> />
                <p>
                    <%= fetch.counter %>
                </p>
            </div>
            
        </div>
        <br />
        <% }) %>
        <% } else { %>
        <p>You did not post anything...</p>
        <% } %>

    </section>


    <%- include('partials/footer.ejs') %>

</body>

</html>